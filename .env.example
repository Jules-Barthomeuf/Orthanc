# Example environment variables
# Copy this to .env.local and fill in the values

# Database (currently using mock data)
DATABASE_URL=

# Authentication
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature Flags
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=false
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true

# --- GitHub auto-sync for property persistence ---
# Create a Fine-grained Personal Access Token at https://github.com/settings/tokens?type=beta
# with "Contents: Read and write" permission on your Orthanc repo.
GITHUB_TOKEN=github_pat_XXXX
GITHUB_REPO=Jules-Barthomeuf/Orthanc
GITHUB_BRANCH=main
